<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Jack Kinsella</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
    <%= render "shared/favicon" %>
    <link rel="alternate" type="application/rss+xml" title="Jack Kinsella RSS Feed" href="<%= feed_url(format: "rss") %>">
    <meta name="google-site-verification" content="937-6YOj2Gnp0ZDEH9UNd3MhKNUwA2JzyVsnhqKG-nU" />
  </head>
  <body>
    <%= render "shared/spinner" %>
    <div class="sidebar-navigation">
      <%= TrackingProxyConfiguration.new %>
      <a href=<%= book_path("entreprenerd-seo-paid-advertising-and-conversion-optimisation") %> class="unstyled">
        <div class="left-sidebar">
          <h2>
            Book
          </h2>
        </div>
      </a>
      <a href=<%= articles_path %> class="unstyled">
        <div class="right-sidebar">
          <h2>
            Articles
          </h2>
        </div>
      </a>
    </div>
    <ul id="mobile-only-menu" class="slideout-menu">
      <li><a href="#" id="slideout-close" class="slideout-close-link">X</a></li>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Articles", articles_path %></li>
      <li><%= link_to "Books", books_path %></li>
      <li><%= link_to "Cart", cart_path %></li>
      <li><%= link_to "Orders", orders_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Contact", new_customer_support_request_path %></li>
    </ul>
    <div class="container" id="main-container">
      <header>
        <div class="header__website-name" id="header__website-name">
          <div class="header__left">
            <p class="toggle-button slideout-panel">â˜°</button></p>
          </div>
          <div class="header__mid">
            <h2><%= link_to "Jack Kinsella", root_path, class: "unstyled" %></h2>
          </div>
          <div class="header__right">
            <%= link_to image_tag("fractal.jpg"), "https://www.youtube.com/watch?v=KC5h_TZRK9E" %>
          </div>
        </div>
      </header>
      <div class="layout__main-content">
        <%= render "layouts/flash" %>
        <%= yield %>
      </div>
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
