<h1>
  Financial transactions reports
</h1>

<p>
  <%= link_to "Schedule new report", new_admin_financial_transactions_report_path %>
</p>

<table>
  <thead>
    <tr>
      <th>
        name
      </th>
      <th>
        created
      </th>
      <th>
        download
      </th>
    </tr>
  </thead>
  <tbody>
    <% financial_transactions_reports.each do |financial_transactions_report| %>
      <tr>
        <td>
          <%= financial_transactions_report.name %>
        </td>
        <td>
          <%= financial_transactions_report.created_at %>
        </td>
        <td>
          <%=
            link_to "First sheet", financial_transactions_report.first_sheet.download_url
          %> |
          <%=
            link_to "Second sheet", financial_transactions_report.second_sheet.download_url
          %> |
          <%=
            link_to "Third sheet", financial_transactions_report.third_sheet.download_url
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate financial_transactions_reports %>
