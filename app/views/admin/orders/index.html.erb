<h1>
  Orders
</h1>

<table>
  <thead>
    <tr>
      <th>
        date
      </th>
      <th>
        email
      </th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td>
          <%=
            link_to(
              order.created_at.strftime("%F"),
              admin_order_path(order)
            )
          %>
        </td>
        <td>
          <%= order.user.email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate orders %>
