<h1>
  Your order details
</h1>

<ul>
  <% order.books.each do |book| %>
    <li>
      <b><%= book.title %></b>:
      <ul>
        <li>
          <%=
            link_to(
              "Download PDF",
              download_pdf_order_book_path(order, book)
            )
          %>
        </li>
        <li>
          <%=
            link_to(
              "Download EPUB",
              download_epub_order_book_path(order, book)
            )
          %>
        </li>
        <li>
          <%=
            link_to(
              "Download MOBI",
              download_mobi_order_book_path(order, book)
            )
          %>
        </li>
      </ul>
    </li>
  <% end %>
</ul>

<hr>
<p>
  <%= button_to "Ask for invoice", new_order_invoice_request_path(order), method: :get %>
</p>
