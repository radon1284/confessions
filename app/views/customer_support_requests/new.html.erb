<div class="inner-frame">
  <h1>
    Contact us
  </h1>
  <p>
    Do you have a question? Use this form to send my staff a message and we will get back to you.
  </p>

  <% if customer_support_request.errors.any? %>
    There were some problems with sending your message:
    <ul>
      <% customer_support_request.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>


  <%= form_for customer_support_request do |f| %>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
    <br/>
    <%= f.label :body, "Message" %>
    <%= f.text_area :body %>
    <br/>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br/>
    <%= f.submit "Send" %>

  <% end %>
</div>
