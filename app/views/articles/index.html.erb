<h1>Articles</h1>

<div class="article__list">
<% articles.each.with_index do |article, index| %>
  <div class="article__item">
    <h3><%= link_to article.title, article_path(article.slug) %></h3>
    <p><%= article.subtitle %> </p>
    <% unless articles.last == article %>
      <hr>
   <% end %>
  </div>
<% end %>
</div>
