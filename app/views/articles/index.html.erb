<% content_for :title, "Articles" %>
<h1>Articles</h1>

<div class='tag-list'>
  <h4>Filter Topic: </h4>
  <ul>
    <% tags.each do |tag| %>
      <li><%= link_to tag.name, articles_path(tag_name: tag.name) %></li>
    <% end %>
  </ul>
</div>
<div class="article__list">
<% articles.each.with_index do |article, index| %>
  <div class="article__item">
    <h3><%= link_to article.title, article_path(article.slug) %></h3>
    <% if article.main_image %>
      <%= image_tag article.main_image %>
    <% end %>
    <p><%= article.subtitle %> </p>
    <% unless articles.last == article %>
      <hr>
   <% end %>
  </div>
<% end %>
</div>
